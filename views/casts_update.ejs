<!DOCTYPE html>
<html>
  <head>
    <title>后端管理系统--更新演员</title>
    <Link rel = 'stylesheet' href = '/bootstrap/dist/css/bootstrap.min.css' />
        <Link rel = 'stylesheet' href = '/stylesheets/font-awesome.min.css' />
        <Link rel = 'stylesheet' href = '/stylesheets/ionicons.min.css' />
        <Link rel = 'stylesheet' href = '/admin-lte/dist/css/AdminLTE.min.css' />
        <Link rel = 'stylesheet' href = '/admin-lte/dist/css/skins/skin-blue.min.css' />
  </head>
 <body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <%- include('./header.ejs')  %>

  <%- include('./menu.ejs')  %>
    
    
    
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        更新演员
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Your Page Content Here -->
        <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">UPDATE CASTS</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" method="post" action="/updateAction">
              <div class="box-body">
                <div class="form-group">
                  <label for="castsid" class="col-sm-2 control-label">演员id</label>

                  <div class="col-sm-10">
                    <input type="text" class="form-control" value="<%= result[0].id %>"  name="id" readonly id="castsid" placeholder="演员id">
                  </div>
                </div>
                <div class="form-group">
                  <label for="castsname" class="col-sm-2 control-label">演员名字</label>

                  <div class="col-sm-10">
                    <input type="text" class="form-control" value="<%= result[0].name %>"  name="name" id="castsname" placeholder="演员名字">
                  </div>
                </div>
                <div class="form-group">
                  <label for="castsimg" class="col-sm-2 control-label">演员头像</label>

                  <div class="col-sm-10">
                    <input type="url" class="form-control" value="<%= result[0].avatars.small %>" name="img" id="castsimg" placeholder="演员头像">
                  </div>
                </div>
                <div class="form-group">
                  <label for="castsalt" class="col-sm-2 control-label">演员alt</label>

                  <div class="col-sm-10">
                    <input type="text" class="form-control" value="<%= result[0].alt %>" name="alt" id="castsalt" placeholder="演员alt">
                  </div>
                </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <div class="form-group">
                  <label for="castsalt" class="col-sm-2 control-label"></label>

                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-info">更新信息</button>
                  </div>
                </div>
              </div>
              <input type="hidden" class="form-control" value="<%= skipNum %>" name="skipNum" >
              <input type="hidden" class="form-control" value="<%= limitNum %>" name="limitNum" >
             <!-- /.box-footer -->
            </form>
          </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%- include('./footer.ejs')  %>
  
  <%- include('./sidebar.ejs')  %>

  
</div>
  </body>
  <script src = "/javascripts/jquery.min.js" ></script>
    <script src = "/bootstrap/dist/js/bootstrap.min.js" ></script>
    <script src = "/javascripts/app.min.js" ></script>
</html>
